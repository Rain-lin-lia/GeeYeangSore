@model IEnumerable<GeeYeangSore.Models.HAd>

@{
    ViewData["Title"] = "廣告管理";
}

<style>
    .btn-main {
        background-color: #3CDDD2;
        color: #222222;
        border: none;
    }

        .btn-main:hover {
            background-color: #24B4A8;
            color: #222222;
        }

    .btn-warning {
        background-color: #F0F9F8;
        color: #222222;
        border: 1px solid #666666;
    }

        .btn-warning:hover {
            background-color: #666666;
            color: #F0F9F8;
        }

    .card {
        background-color: #F0F9F8;
    }

    .card-header {
        background-color: #3CDDD2 !important;
        color: #222222 !important;
    }

    .form-control {
        background-color: #F0F9F8;
        color: #222222;
        border: 1px solid #666666;
    }

        .form-control:focus {
            background-color: #F0F9F8;
            color: #222222;
            border-color: #3CDDD2;
            box-shadow: 0 0 0 0.25rem rgba(60, 221, 210, 0.25);
        }

    .form-label {
        color: #222222;
        margin-bottom: 0.25rem;
    }

    .search-btn {
        background-color: #3CDDD2;
        color: #222222;
        border: none;
        padding: 0.375rem 1rem;
        height: 38px;
    }

        .search-btn:hover {
            background-color: #24B4A8;
            color: #222222;
        }

    .search-form {
        max-width: 800px;
        margin: 0 0 1rem 0;
    }

    .form-group {
        margin-bottom: 0;
    }
    /* 添加固定寬度的表格樣式 */
    .table-fixed {
        table-layout: fixed;
        width: 100%;
    }

        .table-fixed th,
        .table-fixed td {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    /* 設置各列的固定寬度 */
    .col-id {
        width: 80px;
    }

    .col-title {
        width: 300px;
    }

    .col-landlord {
        width: 100px;
    }

    .col-address {
        width: 200px;
    }

    .col-price {
        width: 100px;
    }

    .col-date {
        width: 120px;
    }

    .col-actions {
        width: 200px;
    }

    .pagination .page-item.active .page-link {
        background-color: #3CDDD2;
        border-color: #3CDDD2;
    }

    .pagination .page-link {
        color: #FFFFFF;
    }

        .pagination .page-link:hover {
            color: #24B4A8;
        }
</style>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">廣告管理</h3>
                    <a asp-action="Create" class="btn btn-light">
                        <i class="fas fa-plus"></i> 新增廣告
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-fixed">
                            <thead>
                                <tr>
                                    <th class="col-id">廣告編號</th>
                                    <th class="col-title">廣告標題</th>
                                    <th class="col-landlord">房東</th>
                                    <th class="col-property">房源</th>
                                    <th class="col-status">狀態</th>
                                    <th class="col-date">開始日期</th>
                                    <th class="col-date">結束日期</th>
                                    <th class="col-actions">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.HAdId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HAdName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HLandlord.HLandlordName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HProperty.HPropertyTitle)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HStatus)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HStartDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HEndDate)</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.HAdId" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i> 詳細
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.HAdId" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> 編輯
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@item.HAdId" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('確定要刪除嗎？');">
                                                        <i class="fas fa-trash"></i> 刪除
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
