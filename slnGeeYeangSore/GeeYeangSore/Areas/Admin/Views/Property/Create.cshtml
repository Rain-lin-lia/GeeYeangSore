@* 定義視圖模型為房源實體 *@
@model GeeYeangSore.Models.HProperty

@{
    ViewData["Title"] = "新增房源";
}

<style>
    .btn-main {
        background-color: #3CDDD2;
        color: #222222;
        border: none;
    }
    .btn-main:hover {
        background-color: #24B4A8;
        color: #222222;
    }
    .btn-warning {
        background-color: #F0F9F8;
        color: #222222;
        border: 1px solid #666666;
    }
    .btn-warning:hover {
        background-color: #666666;
        color: #F0F9F8;
    }
    .form-control {
        background-color: #F0F9F8;
        color: #222222;
        border: 1px solid #666666;
    }
    .form-control:focus {
        background-color: #F0F9F8;
        color: #222222;
        border-color: #3CDDD2;
        box-shadow: 0 0 0 0.25rem rgba(60, 221, 210, 0.25);
    }
    .form-label {
        color: #222222;
    }
    .text-danger {
        color: #dc3545 !important;
    }
    .form-check-input:checked {
        background-color: #3CDDD2;
        border-color: #3CDDD2;
    }
    .image-preview {
        max-width: 200px;
        max-height: 200px;
        margin: 10px;
    }
    #imagePreviewContainer {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>新增房源</h1>
                <div>
                    <a asp-action="Index" class="btn btn-main">返回列表</a>
                </div>
            </div>

            <form asp-action="Create" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">基本資訊</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="HLandlordId" class="control-label">房東</label>
                                    <select asp-for="HLandlordId" class="form-control" asp-items="ViewBag.HLandlordId"></select>
                                    <span asp-validation-for="HLandlordId" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HPropertyTitle" class="control-label">標題</label>
                                    <input asp-for="HPropertyTitle" class="form-control" />
                                    <span asp-validation-for="HPropertyTitle" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HRentPrice" class="control-label">租金</label>
                                    <input asp-for="HRentPrice" class="form-control" />
                                    <span asp-validation-for="HRentPrice" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HAddress" class="control-label">地址</label>
                                    <input asp-for="HAddress" class="form-control" />
                                    <span asp-validation-for="HAddress" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HCity" class="control-label">城市</label>
                                    <input asp-for="HCity" class="form-control" />
                                    <span asp-validation-for="HCity" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HDistrict" class="control-label">區域</label>
                                    <input asp-for="HDistrict" class="form-control" />
                                    <span asp-validation-for="HDistrict" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HZipcode" class="control-label">郵遞區號</label>
                                    <input asp-for="HZipcode" class="form-control" />
                                    <span asp-validation-for="HZipcode" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HDescription" class="control-label">描述</label>
                                    <textarea asp-for="HDescription" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="HDescription" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="HPropertyType" class="control-label">房型</label>
                                    <input asp-for="HPropertyType" class="form-control" />
                                    <span asp-validation-for="HPropertyType" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HRoomCount" class="control-label">房間數</label>
                                    <input asp-for="HRoomCount" class="form-control" />
                                    <span asp-validation-for="HRoomCount" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HBathroomCount" class="control-label">衛浴數</label>
                                    <input asp-for="HBathroomCount" class="form-control" />
                                    <span asp-validation-for="HBathroomCount" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HArea" class="control-label">面積</label>
                                    <input asp-for="HArea" class="form-control" />
                                    <span asp-validation-for="HArea" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HFloor" class="control-label">樓層</label>
                                    <input asp-for="HFloor" class="form-control" />
                                    <span asp-validation-for="HFloor" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HTotalFloors" class="control-label">總樓層</label>
                                    <input asp-for="HTotalFloors" class="form-control" />
                                    <span asp-validation-for="HTotalFloors" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HLatitude" class="control-label">緯度</label>
                                    <input asp-for="HLatitude" class="form-control" />
                                    <span asp-validation-for="HLatitude" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HLongitude" class="control-label">經度</label>
                                    <input asp-for="HLongitude" class="form-control" />
                                    <span asp-validation-for="HLongitude" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="HBuildingType" class="control-label">建築類型</label>
                                    <input asp-for="HBuildingType" class="form-control" />
                                    <span asp-validation-for="HBuildingType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h3 class="card-title">房源特色</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HAllowsAnimals" name="features.HAllowsAnimals" />
                                    <label class="form-check-label" for="HAllowsAnimals">允許養寵物</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HAllowsDogs" name="features.HAllowsDogs" />
                                    <label class="form-check-label" for="HAllowsDogs">允許養狗</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HAllowsCats" name="features.HAllowsCats" />
                                    <label class="form-check-label" for="HAllowsCats">允許養貓</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HAllowsCooking" name="features.HAllowsCooking" />
                                    <label class="form-check-label" for="HAllowsCooking">允許開伙</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HHasFurniture" name="features.HHasFurniture" />
                                    <label class="form-check-label" for="HHasFurniture">附家具</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HInternet" name="features.HInternet" />
                                    <label class="form-check-label" for="HInternet">網路</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HAirConditioning" name="features.HAirConditioning" />
                                    <label class="form-check-label" for="HAirConditioning">冷氣</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HSharedRental" name="features.HSharedRental" />
                                    <label class="form-check-label" for="HSharedRental">分租套房</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HTv" name="features.HTv" />
                                    <label class="form-check-label" for="HTv">電視</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HRefrigerator" name="features.HRefrigerator" />
                                    <label class="form-check-label" for="HRefrigerator">冰箱</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HWashingMachine" name="features.HWashingMachine" />
                                    <label class="form-check-label" for="HWashingMachine">洗衣機</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HBed" name="features.HBed" />
                                    <label class="form-check-label" for="HBed">床</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HCableTv" name="features.HCableTv" />
                                    <label class="form-check-label" for="HCableTv">有線電視</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HWaterDispenser" name="features.HWaterDispenser" />
                                    <label class="form-check-label" for="HWaterDispenser">飲水機</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HParking" name="features.HParking" />
                                    <label class="form-check-label" for="HParking">停車位</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HSocialHousing" name="features.HSocialHousing" />
                                    <label class="form-check-label" for="HSocialHousing">社會住宅</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HShortTermRent" name="features.HShortTermRent" />
                                    <label class="form-check-label" for="HShortTermRent">短期租賃</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HPublicElectricity" name="features.HPublicElectricity" />
                                    <label class="form-check-label" for="HPublicElectricity">公共電費</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HPublicWatercharges" name="features.HPublicWatercharges" />
                                    <label class="form-check-label" for="HPublicWatercharges">公共水費</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HLandlordShared" name="features.HLandlordShared" />
                                    <label class="form-check-label" for="HLandlordShared">房東同住</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="HBalcony" name="features.HBalcony" />
                                    <label class="form-check-label" for="HBalcony">陽台</label>
                                </div>

                                <div class="form-check mb-3">
	                                <input type="checkbox" class="form-check-input" id="HPublicEquipment" name="features.HPublicEquipment" />
	                                <label class="form-check-label" for="HPublicEquipment">公共設備</label>
                                </div>
                                <div class="form-check mb-3">
	                                <input type="checkbox" class="form-check-input" id="HWaterHeater" name="features.HWaterHeater" />
	                                <label class="form-check-label" for="HWaterHeater">熱水器</label>
                                </div>
                                <div class="form-check mb-3">
	                                <input type="checkbox" class="form-check-input" id="HGasStove" name="features.HGasStove" />
	                                <label class="form-check-label" for="HGasStove">瓦斯爐</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h3 class="card-title">房源照片</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>上傳照片（可多選）</label>
                            <input type="file" name="images" multiple class="form-control" accept="image/*" onchange="previewImages(event)" />
                            <div id="imagePreviewContainer" class="mt-3"></div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="新增" class="btn btn-main" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImages(event) {
            const container = document.getElementById('imagePreviewContainer');
            container.innerHTML = ''; // 清空預覽容器
            
            const files = event.target.files;
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = 'image-preview';
                        container.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                }
            }
        }
    </script>
}